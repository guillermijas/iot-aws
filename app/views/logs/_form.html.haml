= form_for @log do |f|
  - if @log.errors.any?
    #error_explanation
      %h2= "#{pluralize(@log.errors.count, "error")} prohibited this log from being saved:"
      %ul
        - @log.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :thing
    = f.text_field :thing
  .field
    = f.label :action
    = f.text_field :action
  .actions
    = f.submit 'Save'
